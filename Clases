class IJugador {
public:
    virtual void Puntaje() {}
    virtual void Nombre() {}
    virtual void CrearFicha() {}
    virtual ~IJugador() {}

};

class JugadorHumano : public IJugador{
public:
    void Puntaje() override {}
    void Nombre() override {}
    void CrearFicha() {}

};

class JugadorIaFacil : public IJugador{
public: 
    void Puntaje() override {}
    void Nombre() override {}
    void EvaluarMovimiento() {}
    void CrearFicha() {}

};

class JugadorIaDificil : public IJugador {
public: 
    void Puntaje() override {}
    void Nombre() override {}
    void EvaluarMovimiento() {}
    void CrearFicha() {}

};

class Tablero {
public:
    void TamanoTablero() {}
    void PosicionesOcupadas() {}
    void AgregarFicha() {}
    bool Victoria() {}

};
